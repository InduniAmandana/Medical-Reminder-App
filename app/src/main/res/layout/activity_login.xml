<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backlogin"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textloging"
                android:layout_width="271dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:padding="8dp"
                android:text="Wellcome! Login"
                android:textColor="@color/purple"
                android:textSize="40dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="350dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_bordere"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:hint="Email"
                    android:padding="5dp" />

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="350dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lavender_bordere"
                    android:drawableLeft="@drawable/baseline_screen_lock_portrait_24"
                    android:hint="password"
                    android:inputType="textPassword"
                    android:padding="5dp" />



                <Button
                    android:id="@+id/login_button"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="Login"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/singupRedirectText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="Not yet Registered?Singup"
                    android:textColor="@color/lavender"
                    android:textSize="13dp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>